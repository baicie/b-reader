{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "composite": true,
    "paths": {
      "@b-reader/*": ["packages/*"]
    }
  }
}
