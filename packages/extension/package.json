{
  "publisher": "baicie",
  "name": "b-reader",
  "displayName": "b-reader",
  "version": "0.0.1",
  "description": "read more book",
  "author": {
    "email": "zl316546@gmail.com",
    "name": "baicie",
    "url": "https://github.com/baicie"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/baicie/b-reader"
  },
  "bugs": {
    "url": "https://github.com/baicie/b-reader/issues"
  },
  "keywords": [
    "b-reader",
    "epub",
    "reader"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "icon/ikun.png",
  "qna": "https://github.com/baicie/b-reader/issues",
  "engines": {
    "vscode": "^1.63.0"
  },
  "l10n": "./l10n",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "b-reader.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "b-reader-slider",
          "title": "b-reader",
          "icon": "icon/icon.svg"
        }
      ]
    },
    "views": {
      "b-reader-slider": [
        {
          "type": "webview",
          "id": "b-reader-slider",
          "name": "%b-reader.views.menu.title%"
        }
      ]
    },
    "configuration": {
      "title": "%b-reader.views.menu.settings%",
      "type": "object",
      "properties": {
        "b-reader.unzip": {
          "type": "boolean",
          "default": false,
          "description": "%b-reader.views.menu.settings.unzip%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm tsup",
    "build": "pnpm vsce package --no-dependencies",
    "dev": "pnpm run code-debug && pnpm cross-env NODE_ENV=production pnpm tsup --watch", 
    "lint": "eslint src --ext ts", 
    "code-debug": "tsx ../../scripts/run-code.ts"
  },
  "dependencies": {
    "@b-reader/epub": "workspace:^", 
    "@b-reader/utils": "workspace:^",
    "file-type": "^18.7.0",
    "lowdb": "^6.1.1",
    "uuid": "^9.0.1"
  },
  "buildOptions": {
    "type": "vscode"
  }
}
